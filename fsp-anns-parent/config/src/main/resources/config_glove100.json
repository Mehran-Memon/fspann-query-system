{
  "opsThreshold": 500000000,
  "ageThresholdMs": 86400000,
  "reencryptionEnabled": true,
  "forwardSecurityEnabled": true,
  "profilerEnabled": true,

  "paper": {
    "enabled": true,
    "m": 20,
    "lambda": 2,
    "divisions": 3,
    "tables": 6,
    "seed": 13
  },

  "stabilization": {
    "enabled": false,
    "alpha": 0.02,
    "minCandidatesRatio": 1.25
  },

  "runtime": {
    "precisionMode": false,

    "probeOverride": -1,

    "refinementLimit": 20000,
    "maxCandidateFactor": 6,
    "maxGlobalCandidates": 30000,
    "maxRelaxationDepth": 7,

    "hammingPrefilterThreshold": 8
  },

  "eval": {
    "computePrecision": true,
    "writeGlobalPrecisionCsv": true,
    "kVariants": [1, 20, 40, 60, 80, 100]
  },

  "ratio": {
    "source": "gt",
    "gtSample": 200,
    "gtMismatchTolerance": 0.05
  },

  "profiles": [
    {
      "name": "BASE_BALANCED",
