          "refinementLimit": 20000,
          "maxGlobalCandidates": 30000,
          "maxCandidateFactor": 6,
          "maxRelaxationDepth": 7,
          "hammingPrefilterThreshold": 8
        }
      }
    },

    { "name": "M14", "overrides": { "paper": { "m": 14, "lambda": 2, "divisions": 3, "tables": 6 } } },
    { "name": "M20", "overrides": { "paper": { "m": 20, "lambda": 2, "divisions": 3, "tables": 6 } } },
    { "name": "M28", "overrides": { "paper": { "m": 28, "lambda": 2, "divisions": 3, "tables": 6 } } },

    {
