{
  "numShards": 32,
  "opsThreshold": 1000000000,
  "ageThresholdMs": 31536000000,
  "profilerEnabled": true,

  "reencryption": { "enabled": true },

  "ratio": {"source": "gt"  },

  "eval": {
    "computePrecision": true,
    "writeGlobalPrecisionCsv": true,
    "kVariants": [1, 20, 40, 60, 80, 100]
  },

  "output": {
    "resultsDir": "results",
    "exportArtifacts": true,
    "suppressLegacyMetrics": false
  },

  "cloak": { "noise": 0.0 },

  "lsh": {
    "numTables": 24,
    "rowsPerBand": 12,
    "probeShards": 32
  },

  "paper": {
    "enabled": true,
    "m": 18,
    "lambda": 2,
    "divisions": 14,
    "seed": 42
  },

  "audit": {
    "enable": true,
    "k": 100,
    "sampleEvery": 100,
    "worstKeep": 25
  },

  "profiles": [
    {
      "name": "ratio_ultra",
      "overrides": {
        "paper": { "enabled": true, "m": 26, "lambda": 2, "divisions": 24, "seed": 42 },
        "lsh":   { "numTables": 64, "rowsPerBand": 8, "probeShards": 32 }
      }
    },
    {
      "name": "ratio_max",
      "overrides": {
        "paper": { "enabled": true, "m": 24, "lambda": 2, "divisions": 22, "seed": 42 },
        "lsh":   { "numTables": 56, "rowsPerBand": 9, "probeShards": 32 }
      }
    },
    {
      "name": "ratio_plus",
      "overrides": {
        "paper": { "enabled": true, "m": 22, "lambda": 2, "divisions": 20, "seed": 42 },
        "lsh":   { "numTables": 48, "rowsPerBand": 10, "probeShards": 32 }
      }
    },
    {
      "name": "ratio_mid",
      "overrides": {
        "paper": { "enabled": true, "m": 20, "lambda": 2, "divisions": 18, "seed": 42 },
        "lsh":   { "numTables": 40, "rowsPerBand": 10, "probeShards": 32 }
      }
    },
    {
      "name": "ratio_fast",
      "overrides": {
        "paper": { "enabled": true, "m": 18, "lambda": 2, "divisions": 16, "seed": 42 },
        "lsh":   { "numTables": 36, "rowsPerBand": 11, "probeShards": 32 }
      }
    },
    {
      "name": "ratio_fallback",
      "overrides": {
        "paper": { "enabled": true, "m": 16, "lambda": 2, "divisions": 14, "seed": 42 },
        "lsh":   { "numTables": 32, "rowsPerBand": 12, "probeShards": 32 }
