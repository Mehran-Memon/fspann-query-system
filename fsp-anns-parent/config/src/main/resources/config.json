  "output": {
    "resultsDir": "results",
    "exportArtifacts": true,
    "suppressLegacyMetrics": false
  },

  "cloak": { "noise": 0.0 },

  "lsh": {
    "numTables": 24,
    "rowsPerBand": 12,
    "probeShards": 32
  },

  "paper": {
