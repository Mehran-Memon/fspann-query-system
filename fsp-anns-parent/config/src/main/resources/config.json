{
  "numShards": 32,
  "opsThreshold": 500000000,
  "ageThresholdMs": 604800000,
  "reEncBatchSize": 2000,
  "profilerEnabled": true,

  "reencryption": { "enabled": true },

  "eval": {
    "computePrecision": true,
    "writeGlobalPrecisionCsv": true,
    "kVariants": [1, 20, 40, 60, 80, 100]
  },

  "ratio": {
    "source": "base",
    "gtSample": 0,
    "gtMismatchTolerance": 0.0
