{
  "base": {
    "numShards": 48,
    "opsThreshold": 500000000,
    "ageThresholdMs": 86400000,
    "reencryptionEnabled": true,
    "forwardSecurityEnabled": true,
    "partitionedIndexingEnabled": true,
    "profilerEnabled": true,

    "paper": {
      "enabled": true,
      "m": 18,
      "lambda": 2,
      "divisions": 3,
      "seed": 13,
      "safetyMaxCandidates": 0,
      "probeLimit": 10
    },

    "stabilization": {
      "enabled": true,
      "alpha": 0.15,
      "minCandidates": 8000
    },

    "runtime": {
      "maxCandidateFactor": 20,
      "maxRefinementFactor": 8,
      "maxRelaxationDepth": 1,
      "earlyStopCandidates": 4000
    },

    "eval": {
      "computePrecision": true,
      "writeGlobalPrecisionCsv": true,
      "kVariants": [1, 5, 10, 20, 50, 100]
    },

    "ratio": {
      "source": "gt",
      "gtSample": 10000,
      "autoComputeGT": false
    },

    "output": {
      "exportArtifacts": true,
      "suppressLegacyMetrics": true
    }

  },

  "profiles": [

    { "name": "M10", "overrides": { "paper": { "m": 10, "lambda": 3, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "M14", "overrides": { "paper": { "m": 14, "lambda": 3, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "M18", "overrides": { "paper": { "m": 18, "lambda": 3, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "M22", "overrides": { "paper": { "m": 22, "lambda": 3, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "M25", "overrides": { "paper": { "m": 25, "lambda": 3, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },

    { "name": "L2", "overrides": { "paper": { "m": 18, "lambda": 2, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "L3", "overrides": { "paper": { "m": 18, "lambda": 3, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "L4", "overrides": { "paper": { "m": 18, "lambda": 4, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },
    { "name": "L5", "overrides": { "paper": { "m": 18, "lambda": 5, "divisions": 3, "seed": 13, "safetyMaxCandidates": 0 } } },

