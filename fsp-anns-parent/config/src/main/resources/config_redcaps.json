{
  "base": {
    "numShards": 48,
    "partitionedIndexingEnabled": true,
    "forwardSecurityEnabled": true,

    "paper": {
      "enabled": true,
      "m": 32,
      "lambda": 2,
      "divisions": 4,
      "seed": 13
    },

    "stabilization": {
      "enabled": true,
      "alpha": 0.15,
      "minCandidates": 2000
    },

    "eval": {
      "computePrecision": true,
      "writeGlobalPrecisionCsv": true,
      "kVariants": [1, 10, 20, 50, 100]
    }
  },

  "profiles": [

    { "name": "M20", "overrides": { "paper": { "m": 20 } } },
    { "name": "M24", "overrides": { "paper": { "m": 24 } } },
    { "name": "M28", "overrides": { "paper": { "m": 28 } } },
    { "name": "M32", "overrides": { "paper": { "m": 32 } } },

    { "name": "L1", "overrides": { "paper": { "lambda": 1 } } },
    { "name": "L2", "overrides": { "paper": { "lambda": 2 } } },
    { "name": "L3", "overrides": { "paper": { "lambda": 3 } } },

    { "name": "D2", "overrides": { "paper": { "divisions": 2 } } },
    { "name": "D3", "overrides": { "paper": { "divisions": 3 } } },

    { "name": "A0.10", "overrides": { "stabilization": { "alpha": 0.10 } } },
    { "name": "A0.15", "overrides": { "stabilization": { "alpha": 0.15 } } },
    { "name": "A0.20", "overrides": { "stabilization": { "alpha": 0.20 } } }
  ]
}
