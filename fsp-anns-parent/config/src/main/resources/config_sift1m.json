{
  "opsThreshold": 500000000,
  "ageThresholdMs": 86400000,
  "reencryptionEnabled": true,
  "forwardSecurityEnabled": true,
  "profilerEnabled": true,

  "paper": {
    "enabled": true,
    "m": 24,
    "lambda": 2,
    "divisions": 8,
    "tables": 6,
    "seed": 13
  },

  "stabilization": {
    "enabled": false,
    "alpha": 0.02,
    "minCandidatesRatio": 1.20
  },

  "runtime": {
    "precisionMode": false,

    "probeOverride": -1,

    "refinementLimit": 20000,
    "maxCandidateFactor": 6,
    "maxGlobalCandidates": 25000,
    "maxRelaxationDepth": 8,

    "hammingPrefilterThreshold": 0
  },

  "eval": {
    "computePrecision": true,
    "writeGlobalPrecisionCsv": true,
    "kVariants": [1, 10, 20, 40, 60, 80, 100]
  },

  "ratio": {
    "source": "gt",
    "gtSample": 200,
    "gtMismatchTolerance": 0.05
  },

  "profiles": [
    {
      "name": "BASE_BALANCED",
      "description": "Baseline for SIFT1M trade-off (balanced)",
      "overrides": {
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 },
        "runtime": {
          "probeOverride": 10,
          "refinementLimit": 20000,
          "maxGlobalCandidates": 25000,
          "maxCandidateFactor": 6,
          "maxRelaxationDepth": 8,
          "hammingPrefilterThreshold": 8
        }
      }
    },

    {
      "name": "M18",
      "description": "m sweep (quality/size vs speed)",
      "overrides": { "paper": { "m": 18, "lambda": 2, "divisions": 8, "tables": 6 } }
    },
    {
      "name": "M24",
      "overrides": { "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 } }
    },
    {
      "name": "M32",
      "overrides": { "paper": { "m": 32, "lambda": 2, "divisions": 8, "tables": 6 } }
    },

    {
      "name": "T6_FAST",
      "description": "Fast end of curve (cap decrypt)",
      "overrides": {
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 },
        "runtime": {
          "probeOverride": 6,
          "refinementLimit": 8000,
          "maxGlobalCandidates": 12000,
          "maxCandidateFactor": 4,
          "maxRelaxationDepth": 6,
          "hammingPrefilterThreshold": 10
        }
      }
    },
    {
      "name": "T6_BALANCED",
      "description": "Middle point of curve",
      "overrides": {
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 },
        "runtime": {
          "probeOverride": 10,
          "refinementLimit": 20000,
          "maxGlobalCandidates": 25000,
          "maxCandidateFactor": 6,
          "maxRelaxationDepth": 8,
          "hammingPrefilterThreshold": 8
        }
      }
    },
    {
      "name": "T6_RECALL",
      "description": "High recall point (still defendable under 1s target if decrypt stays bounded)",
      "overrides": {
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 },
        "runtime": {
          "probeOverride": 16,
          "refinementLimit": 32000,
          "maxGlobalCandidates": 40000,
          "maxCandidateFactor": 10,
          "maxRelaxationDepth": 10,
          "hammingPrefilterThreshold": 6
        }
      }
    },

    {
      "name": "TABLES_8_RECALL",
      "description": "Tables ablation (increase collision opportunities for recall)",
      "overrides": {
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 8 },
        "runtime": {
          "probeOverride": 12,
          "refinementLimit": 32000,
          "maxGlobalCandidates": 45000,
          "maxCandidateFactor": 10,
          "maxRelaxationDepth": 10,
          "hammingPrefilterThreshold": 6
        }
      }
    },

    {
      "name": "HAMMING_OFF_BALANCED",
      "description": "Hamming ablation (same as balanced, but disable prefilter)",
      "overrides": {
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 },
        "runtime": {
          "probeOverride": 10,
          "refinementLimit": 20000,
          "maxGlobalCandidates": 25000,
          "maxCandidateFactor": 6,
          "maxRelaxationDepth": 8,
          "hammingPrefilterThreshold": 0
        }
      }
    },

    {
      "name": "NO_REENCRYPT_BALANCED",
      "description": "Security-cost ablation: disable reencryption",
      "overrides": {
        "reencryptionEnabled": false,
        "paper": { "m": 24, "lambda": 2, "divisions": 8, "tables": 6 },
        "runtime": {
          "probeOverride": 10,
          "refinementLimit": 20000,
          "maxGlobalCandidates": 25000,
          "maxCandidateFactor": 6,
          "maxRelaxationDepth": 8,
          "hammingPrefilterThreshold": 8
        }
      }
    }
  ]
}
