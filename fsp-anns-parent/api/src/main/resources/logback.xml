<configuration>

    <!-- ================= FILE ONLY ================= -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/fsp-ann.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%logger{20}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ================= ROOT ================= -->
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

    <!-- ================= ALLOWED INFO ================= -->
    <!-- System lifecycle, startup, shutdown -->
    <logger name="com.fspann.api.ForwardSecureANNSystem" level="INFO" />

    <!-- Final evaluation summaries only -->
    <logger name="com.fspann.query.core.EvaluationSummaryPrinter" level="INFO" />

    <!-- ================= FORCE SILENT (CRITICAL) ================= -->
    <!-- Query path: MUST be quiet -->
    <logger name="com.fspann.query.service.QueryServiceImpl" level="WARN" />

    <!-- Index probing & partition traversal -->
    <logger name="com.fspann.index.paper.PartitionedIndexService" level="WARN" />
    <logger name="com.fspann.index.paper.GFunctionRegistry" level="WARN" />

    <!-- Crypto / keys -->
    <logger name="com.fspann.crypto" level="WARN" />
    <logger name="com.fspann.key" level="WARN" />

    <!-- Loaders -->
    <logger name="com.fspann.loader" level="WARN" />

    <!-- External libraries -->
    <logger name="org.rocksdb" level="WARN" />
    <logger name="io.micrometer" level="WARN" />
    <logger name="org.apache" level="WARN" />

</configuration>
